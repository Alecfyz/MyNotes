<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="@dimen/list_padding"
    android:clickable="true"
    android:focusable="true"
    android:background="?selectableItemBackground">

    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="@string/note_title"
        android:maxLines="1"
        android:singleLine="true"
        android:textSize="@dimen/notes_title_textsize"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/description_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="тело ноты тело ноты тело ноты тело ноты тело ноты тело ноты тело ноты тело ноты тело ноты тело ноты тело ноты тело ноты тело ноты тело ноты тело ноты тело ноты тело ноты "
        android:maxLines="2"
        android:textSize="@dimen/notes_descr_textsize"
        android:textStyle="italic"
        android:ellipsize="end"
        />
</LinearLayout>